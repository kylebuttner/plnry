<!DOCTYPE html public "-//w3c//dtd html 4.01//en" "http://www.w3.org/tr/html4/strict.dtd">

<html>
<head>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link href='https://fonts.googleapis.com/css?family=Quicksand|EB+Garamond' rel='stylesheet' type='text/css'>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
</head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-left" id="logo">
        <%= link_to image_tag("logo.png", alt: "logo"),
            root_path %>
        </div>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Features",   features_path, :class => ('active' if current_page?(features_path)) %></li>
            <li><%= link_to "Log In", login_path, :class => ('active' if current_page?(login_path)) %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div id='overall'>
      <%= yield %>
      <%= render "layouts/google_analytics" %>
    </div>

  </body>
</html>
